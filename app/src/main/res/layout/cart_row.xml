<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#EDDDDD"
    android:padding="2dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent=".10"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintHorizontal_bias=".05"
        android:src="@drawable/bluebag"
        android:id="@+id/cart_row_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/cart_row_image"
        app:layout_constraintEnd_toStartOf="@id/cart_rowPrice"
        app:layout_constraintTop_toTopOf="@id/cart_row_image"
        app:layout_constraintBottom_toBottomOf="@id/cart_row_image"
        android:text="Backpack"
        android:textStyle="bold"
        android:textSize="16sp"
        android:id="@+id/cart_rowName"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/cart_rowName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/cart_row_image"
        app:layout_constraintBottom_toBottomOf="@id/cart_row_image"
        android:text="Price 2000 BDT"
        android:id="@+id/cart_rowPrice"/>






</androidx.constraintlayout.widget.ConstraintLayout>